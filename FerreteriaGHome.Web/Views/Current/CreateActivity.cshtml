@model FerreteriaGHome.Web.Models.ActivityViewModel

@{
    ViewData["Title"] = "Create";
}
<a class="material-back" asp-controller="Current" asp-action="Index" asp-route-id="@ViewBag.proyectId">
    <span class="material-symbols-outlined">
        arrow_back
    </span>
</a>

<h3 class="title-current title-menu">Activity</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateActivity" method="post" enctype="multipart/form-data">
            <input type="hidden" name="proyectId" value="@ViewBag.proyectId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriorityId" class="control-label"></label>
                <select asp-for="PriorityId" asp-items="Model.Priorities" class="form-control"></select>
                <span asp-validation-for="PriorityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observations" class="control-label"></label>
                <input asp-for="Observations" class="form-control" />
                <span asp-validation-for="Observations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileId" class="control-label"></label>
                <input asp-for="FileId" class="form-control" type="file" accept=".pdf" />
                <span asp-validation-for="FileId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" asp-items="Model.Statuses" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
