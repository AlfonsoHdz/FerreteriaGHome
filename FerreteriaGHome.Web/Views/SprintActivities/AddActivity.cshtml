@model IEnumerable<FerreteriaGHome.Web.Data.Entities.Activity>
@{
    ViewData["Title"] = "usuarios";
}

<h1>Listado de Actividades</h1>

<form asp-action="AddActivity" method="post">
    <input type="hidden" name="proyectId" value="@ViewBag.proyectId" />
    @*<h2>Poryecto ID: @ViewBag.proyectId</h2>*@

    <div class="form-group">
        <input type="submit" value="Agregar Actividades" class="btn btn-primary" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    Prioridad
                </th>
                <th>
                    Evidencia
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Observations)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input class="form-check-input" name="selectedActivitiesIds" type="checkbox" value="@item.Id">

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority.Description)
                    </td>
                    <td>
                        @if (item.File != null && item.File.Length > 0)
                        {
                            <a href="@Url.Action("DownloadFile", "Activities", new { id = item.Id })">Descargar PDF</a>
                        }
                        else
                        {
                            <p>Sin evidencia</p>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observations)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

