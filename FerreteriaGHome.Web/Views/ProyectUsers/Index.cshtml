@model IEnumerable<FerreteriaGHome.Web.Data.Entities.User>

@{
    ViewData["Title"] = "usuarios";
}

<a class="material-back" asp-controller="Current" asp-action="Index" asp-route-id="@ViewBag.proyectId">
    <span class="material-symbols-outlined">
        arrow_back
    </span>
</a>

<h1 class="title-current title-menu">Usuarios en el Proyecto</h1>

<p class="button-container">
    <a class="material-button" asp-action="AddUser" asp-route-id="@ViewBag.proyectId">
        <span class="material-symbols-outlined">
            add
        </span>
        Nuevo usuario al proyecto
    </a>
</p>
@*<p>
    <a asp-action="AddUser" asp-route-id="@ViewBag.proyectId">Agregar un nuevo usuario al proyecto </a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FathersName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaternalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FathersName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaternalName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a class="material-button__secondary" asp-action="RemoveUserFromProyect" asp-route-proyectId="@ViewBag.proyectId" asp-route-userId="@item.Id">
                        <span class="material-symbols-outlined">
                            <span class="material-symbols-outlined">
                                delete
                            </span>
                        </span>
                    </a>
                    @*<a asp-action="RemoveUserFromProyect" asp-route-proyectId="@ViewBag.proyectId" asp-route-userId="@item.Id">Eliminar</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
