    <a asp-action="AddUser" asp-route-Id="@ViewBag.Id" asp-route-proyectId="@ViewBag.proyectId">Agregar un nuevo estudiante a la actividad</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FathersName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaternalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FathersName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaternalName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="RemoveUserFromActivity" asp-route-Id="@ViewBag.Id" asp-route-proyectId="@ViewBag.proyectId" asp-route-userId="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
