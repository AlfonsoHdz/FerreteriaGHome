@model IEnumerable<FerreteriaGHome.Web.Data.Entities.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Productos</h1>

<p>
     @if (this.User.IsInRole("Admin"))
     {
        
        <a asp-action="Create" class="btn btn-success"><span class="material-symbols-outlined">add</span></a>
        
     }
</p>

<div class="container border border-success mt-4 tab">
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenUrl)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Brand.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImagenUrl))
                {
                    <img src="@Url.Content(item.ImagenUrl)" width="100" />
                }
            </td>
          @*  <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Brand.Name)
            </td>

            <td>
                  @if (this.User.IsInRole("Admin"))
                    {
                          <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark"><span class="material-symbols-outlined">edit</span></a>
                          <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"><span class="material-symbols-outlined">info</span></a>
                          <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><span class="material-symbols-outlined">delete</span></a>

                    }
              
              

            </td>
        </tr>
}
    </tbody>
</table>
</div>

