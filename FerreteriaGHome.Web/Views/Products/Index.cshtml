@model IEnumerable<FerreteriaGHome.Web.Data.Entities.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Agregar Nuevo Producto</a>
</p>
<table class="table table-hover table-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nameP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcionP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.priceP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcionP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.priceP)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
