@model FerreteriaGHome.Web.Models.UpdateActivityViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewEvidence" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="FileId" class="form-control" type="file" accept=".pdf" />
                <span asp-validation-for="FileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
